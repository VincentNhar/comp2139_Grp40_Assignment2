@model Item
@{
    ViewBag.Title = ViewBag.Action;
}
<h1 style="text-align: center;">@ViewBag.Action</h1>

<div class="container">

    <div class="d-flex justify-content-evenly">


        <div class="row">

            <div class="col-4 justify-content-lg-center">

                <h3 style="text-align: center;">Product</h3>

                <div class="card border border-light" style=" text-align: center; height: auto; width: auto; border: 1px">

                    @if (ViewBag.ItemImage.ContainsKey(@Model) && ViewBag.ItemImage[@Model] != null)
                    {
                        <div style="border-top: 1px solid; height: 300px; overflow: hidden;">
                            <img style="object-fit:cover;" class="img-fluid card-img"
                                 src="data:image/*;base64,@(ViewBag.ItemImage[@Model])" />
                        </div>
                    }
                    <div class="card-body">

                        <ul class="list-group">

                            <li class="list-group-item">Product Name: @Model.Name</li>
                            <li class="list-group-item">@Model.Description</li>
                            <li class="list-group-item">Starting Bid: @Model.StartingBidPrice.ToString("c2")</li>
                            <li class="list-group-item">Closing Date: @Model.BidEnd.ToString("dddd MMM dd - h:mm tt")</li>
                            <li class="list-group-item">
                                Seller: <a style="text-decoration: none;" class="text-dark" asp-controller="Home"
                                           asp-action="Profile" asp-route-username="@Model.Seller">@Model.Seller</a>
                            </li>

                        </ul>

                        <div class="d-flex m-auto justify-content-center ">

                            <div class="form-floating">
                                <input style="text-align: center;" id="bid" class="form-control" placeholder="Enter Bid" size="80" />
                                <label id="bid">Enter bid amount:</label>
                            </div>

                        </div>

                        <div class="d-flex justify-content-center">

                            <button style="margin: 10px 5px 10px 5px;" type="submit" class="btn btn-primary">Place Bid</button>
                            <button style="margin: 10px 5px 10px 5px;" type="button" class="btn btn-danger">Buy Now!</button>

                        </div>


                    </div>


                </div>

